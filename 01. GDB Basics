[shell]$ gdb <program>							# Load program in GDB
$ break <line>									# Set breakpoint at line number == line (e.g. 1, 2, 3...)
$ break <routine>								# Set breakpoint at routine name == routine (e.g. _start, main)
$ set disassembly-flavor intel					# Print in intel disassembly syntax

$ run											# Run the program
$ next											# Execute next 
$ stepi

$ info variables								# Print variables
$ info registers								# Print registers
$ info functions								# Print defined functions and symbols

$ disassemble									# Print assembler dump
$ print <variable>								# Print value of variable
$ print &<variable>								# Print address of variable
$ x/xb <address>								# Print byte at address
$ x/<n>xb <address>								# Print n bytes at address (e.g. x/3xb -> print 3 bytes)
$ x/xb &<address>								# Print byte at address (alternative)
